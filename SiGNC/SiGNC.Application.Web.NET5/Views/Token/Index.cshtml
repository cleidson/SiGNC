@model SiGNC.Application.Web.NET5.Models.Autenticacao.UsuarioViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SiGNC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link href="~/lib/bootstrap/font-awesome/css/all.min.css" rel="stylesheet" />

</head>
<body class="text-center">
    <form class="form-signin">
        <div class="mb-4"><h1>SiGNC</h1></div>

        <h1 class="h3 mb-3 font-weight-normal">
            <span class="fa fa-user-circle" style="font-size:80px"></span>

        </h1>

        <label for="inputEmail" class="sr-only">E-mail</label>
        <input a class="form-control" type="email" id="inputEmail" placeholder="Insira o e-mail" required="" autofocus="" />
        <div class="invalid-feedback"> Por favor, insira o E-mail.</div>
        <label for="inputPassword" class="sr-only">Password</label>
        <input class="form-control" type="password" id="inputPassword" placeholder="Insira a senha" required="" />
        <div class="invalid-feedback"> Por favor, insira a Senha.</div>

        <div class="error-invalid-login " id="ErroLogin"> Email e Senha inválidos</div>
        <button class="btn btn-lg btn-primary btn-block" id="btn-login-entrar" type="button">Entrar</button>
        <p class="mt-5 mb-3 text-muted">© SiGN - @DateTime.Now.Year</p>
    </form>


</body>
</html>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/jquery-ui.js"></script>
<script src="~/lib/jquery.maskedinput/jquery.maskedinput.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
@*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
<script src="~/lib/feather-icons/feather.min.js"></script>


@section Scripts
{
    <script src="~/js/app/conformidade/conformidade-login.js"></script>
}

<script src="~/js/site.js" asp-append-version="true"></script>
