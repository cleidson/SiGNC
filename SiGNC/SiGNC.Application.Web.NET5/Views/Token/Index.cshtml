@model SiGNC.Application.Web.NET5.Models.Autenticacao.UsuarioViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SiGNC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />

</head>
<body class="text-center">
    <form class="form-signin" asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-4"><h1>SiGNC</h1></div>
        @*<img class="mb-4" src="../../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        @*<input>*@
        <input asp-for="Email" class="form-control"  type="email" id="inputEmail" class="form-control" placeholder="Insira o e-mail" required="" autofocus=""/>

        <label for="inputPassword" class="sr-only">Password</label>
        @*<input type="password" id="inputPassword" class="form-control" placeholder="Insira a senha" required="">*@
        <input asp-for="Senha" class="form-control" type="password" id="inputPassword" class="form-control" placeholder="Insira a senha" required="" />
        <span asp-validation-for="Senha" class="text-danger"></span>
        <div class="checkbox mb-3">
            @*<label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>*@
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-muted">© SiGN - @DateTime.Now.Year</p>
    </form>


</body>
</html>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/feather-icons/feather.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>