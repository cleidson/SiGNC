
@{
    ViewData["Title"] = "Pendentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Conformidades Pendentes</h1>
</div>

<form>

    <div class="flex-row margin-top-10px">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h5">Cadastrar conformidade</h1>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Emitente">Emitente</label>
                <input type="text" class="form-control" id="emitente">
            </div>
            <div class="form-group col-md-2">
                <label for="nao-conformidade-numero">Nº RNC</label>
                <input type="text" class="form-control" id="numero-nao-conformidade">
            </div>
            <div class="form-group col-md-2">
                <label for="nao-conformidade-numero">Status Conformidade</label>
                <select class="selectpicker form-control" disabled>
                    <option>Novo</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="Data Emissão">Data emissão</label>
                <input type="text" class="form-control" id="data-emissao" disabled>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="nao-conformidade-numero">Origem</label>
                <select class="selectpicker  form-control" data-live-search="true" title="Selecione a Origem" id="selectOrigem">
                    <option>Mustard</option>
                    <option>Ketchup</option>
                    <option>Relish</option>
                </select>
            </div>     
            <div class="form-group col-md-4">
                <label for="nao-conformidade-numero">Reincidente</label>
                <select class="selectpicker  form-control" data-live-search="true" title="Reincidente?" id="selectReincidente">
                    <option>Sim</option>
                    <option>Não</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="nao-conformidade-numero">Requisito</label>
                <select class="selectpicker  form-control" data-live-search="true" title="Selecione o requisito" id="selectRequisito">
                    <option>AC</option>
                    <option>OM</option>
                </select>
            </div>
        </div>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h5">Detalhamento não conformidade</h1>
            <a class="d-flex align-items-center text-muted" href="#" data-toggle="tooltip" data-html="true" title="Adicionar detalhamento" id="add-detalhamento">
                <span data-feather="plus-circle"></span>
            </a>
        </div>
        <div class="form-row ">
            <div class="form-group col-md-12">
                <label for="descricao-detalhamento-nao-conformidade" id="lbl-desc-detalhamento-nao-conformidade">Descrição</label>
                <input type="text" class="form-control" id="descricao-detalhamento-nao-conformidade" placeholder="Descrição" name="descricao-detalhamento-nao-conformidade">
                <div class="invalid-feedback"> Por favor, insira a descrição.</div>
            </div>
        </div>
        <div class="form-row ">
            <div class="form-group col-md-12">
                <div class="form-group">
                    <label for="detalhamento-nao-conformidade" id="lbl-detalhamento-nao-conformidade">Detalhamento não conformidade</label>
                    <textarea class="form-control" id="detalhamento-nao-conformidade" rows="3" placeholder="Detalhamento" name="detalhamento-nao-conformidade"></textarea>
                    <div class="invalid-feedback"> Por favor, insira o detalhamento.</div>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12 float-md-right">
                <button type="button" class="btn btn-secondary float-md-right" id="adicionar-detalhamento-naoconformidade">Adicionar</button>
            </div>
        </div>
        <div class="flex-row ">
            <h5>Conformidades Pendentes</h5>
            <div class="table-responsive">
                <table class="table  table-striped table-sm" id="table-detalhamento">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Descrição</th>
                            <th>Detalhamento</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="form-row" id="btnDeletarRow">
                <div class="form-group col-md-12 float-md-right">
                    <button type="button" class="btn btn-danger float-md-right" id="delete-row">Deletar</button>
                </div>
            </div>
        </div>
        <!-- Ação corretiva-->
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom margin-top-9px">
            <h1 class="h5">Ação de correção (Imediata)</h1>
        </div>

        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="acao-imediata-descricao">Descrição breve</label>
                <input type="text" class="form-control" id="acao-imediata-descricao">
            </div>
            <div class="form-group col-md-2">
                <label for="data-acao-imediata">Data da Implantação</label>
                <input type="text" class="form-control" id="data-acao-imediata">
            </div>
            <div class="form-group col-md-2">
                <label for="responsavel-acao-imediata">Responsável</label>
                <input type="text" class="form-control" id="responsavel-acao-imediata">
            </div>
        </div>

        <!-- Análise causa raiz -->

        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom margin-top-9px">
            <h1 class="h5">Análise de Causa Raiz (Porque ocorreu a não conformidade? )</h1>
        </div>

        <div class="form-row">
            <div class="form-group col-md-7">
                <label for="causa-raiz-descritivo">Descrição breve</label>
                <input type="text" class="form-control" id="causa-raiz-descritivo" disabled placeholder="Possíveis desvios no processo ou no método que causaram o problema">
            </div>
            <div class="form-group col-md-1">
                <label for="nao-conformidade-numero">Ocorreu?</label>
                <select class="selectpicker  form-control" data-live-search="true" title="Ocorreu?" id="causa-raiz-ocorreu">
                    <option>Sim</option>
                    <option>Não</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="causa-raiz-quais">Descreva quais</label>
                <input type="text" class="form-control" id="causa-raiz-quais">
            </div>
        </div>


        <div class="form-row">
            <div class="form-group col-md-12 float-md-right">
                <button type="button" class="btn btn-primary float-md-right" id="btn-salvar-conformidade">Salvar</button>
            </div>
        </div>
    </div>
</form>

